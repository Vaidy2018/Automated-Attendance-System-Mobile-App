<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.internshala.helloworld.ongcattendance.Login"
    tools:showIn="@layout/activity_login"
    android:contextClickable="false"
    android:background="#eaf7f9">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPF :   "
        android:id="@+id/textView1"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/button13"
        android:layout_toStartOf="@+id/editText1" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText1"
        android:hint="Enter your CPF ID"
        android:paddingTop="5dp"

        android:layout_alignTop="@+id/textView1"
        android:layout_alignStart="@+id/editText2"
        android:password="false" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password :   "
        android:id="@+id/textView2"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="5dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/editText1"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Enter your Password"
        android:paddingTop="5dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:password="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="      Login       "
        android:id="@+id/button"
        android:background="#0dad18"
        android:textColor="#ffffff"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView1" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button3"
        android:background="#0098c6"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/button"
        android:layout_alignEnd="@+id/editText2" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="#eaf7f9"
        android:id="@+id/frameLayout">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView"
            android:layout_gravity="center"
            android:src="@drawable/abc" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:id="@+id/textView16"
        android:textColor="#0fc9e6"
        android:clickable="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/button"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Login"
        android:id="@+id/textView17"
        android:layout_marginTop="24dp"
        android:textColor="#0fc9e6"
        android:clickable="true"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="Auto Login"
        android:id="@+id/button13"
        android:layout_marginTop="20dp"
        android:background="#ffee00"
        android:layout_below="@+id/frameLayout"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
