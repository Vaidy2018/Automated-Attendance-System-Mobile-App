<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.internshala.helloworld.ongcattendance"
    android:versionCode="100">

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/abc"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.internshala.helloworld.ongcattendance.Login" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Register">
            <intent-filter>
                <action android:name="com.internshala.helloworld.ongcattendance.Register" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".UserPortal" android:screenOrientation="portrait"/>
        <activity android:name=".ForgotPass" android:screenOrientation="portrait"/>
        <activity android:name=".AdminLogin" android:screenOrientation="portrait"/>
        <activity android:name=".AdminPanel" android:screenOrientation="portrait"/>
        <activity android:name=".AttendanceHistory" android:screenOrientation="portrait"/>
        <activity android:name=".changePassword" android:screenOrientation="portrait"/>
        <activity android:name=".Home" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Profile" android:screenOrientation="portrait"/>
        <activity android:name=".Team1" android:screenOrientation="portrait"/>
        <activity android:name=".Developer" android:screenOrientation="portrait"></activity>
    </application>

</manifest>
